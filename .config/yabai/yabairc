yabai -m signal --add event=window_created action='
  yabai -m query --windows --window $YABAI_WINDOW_ID | jq -er ".\"can-resize\" == false" && echo "Hello...${YABAI_WINDOW_ID}" > /tmp/yabai_shahid.out.log'

